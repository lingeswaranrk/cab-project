<style>
    .container{
        display: flex;
        margin-top: 50px;
        margin-left: 340px;
            border-radius: 5px;
        background-color:yellowgreen;
        width: 500px;

    }
    
    body {
        background-image: url('https://images.pexels.com/photos/590059/pexels-photo-590059.jpeg?auto=compress&cs=tinysrgb&w=600');
        background-size: cover;
    }

    
</style>
<center>
<h1 class="text-center" style="color:yellow" >UPDATE USER DETAILS</h1>

</center>
<div class="container">
            <div class="row">



                <table>
                    <form method="post">

                        <tr>
                            <td>
                                <label for="firstName">First Name</label>
                            </td>

                            <td>
                                <input type="text" name="firstName" id="firstName" class="form-control"
                                 style="width: 20vw; padding: 5px;" value="{{data.dataValues.firstName}}">
                            </td>
                        </tr>


                        <tr>
                            <td>
                                <label for="lastName">Last Name</label>
                            </td>
                            <td>

                                <input type="text" name="lastName" id="lastName" class="form-control" 
                                    style="width: 20vw; padding: 5px;" value="{{data.dataValues.lastName}}">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="email">Email</label>
                            </td>
                            <td>
                                <input type="email" name="email" id="email" class="form-control"
                                     style="width: 20vw; padding: 5px;" value="{{data.dataValues.email}}">
                            </td>

                        <tr>
                            <td>
                                <label for="password">Password</label>
                            </td>
                            <td>
                                <input type="password" name="password" id="password" class="form-control"
                                     style="width: 20vw; padding: 5px;" value="{{data.dataValues.password}}">
                            </td>
                        </tr>
                            </table>



             
            <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary">UPDATE</button>
                    {{#if message}}
                        <p class="text-danger">{{message}}</p>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>


