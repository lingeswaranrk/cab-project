<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
  rel="stylesheet"
  crossorigin="anonymous"
/>

<style>
  .row {
    margin-top: 15%;
  }

  .sub {
    margin-top: 10%;
    margin-left: 45%;
  }

  .all {
    display: flex;
  }
</style>

<nav id="nav-example" class="nav justify-content-center fixed-top bg-black">
  <a class="nav-link text-light" href="#div1">Ride</a>
  <a
    class="nav-link dropdown-toggle text-light"
    href="#"
    id="dropdownId"
    data-bs-toggle="dropdown"
    aria-haspopup="true"
    aria-expanded="false"
    >Menu</a
  >
  <div class="dropdown-menu" aria-labelledby="dropdownId">
    <a class="dropdown-item" href="/api/user/booking">Booking Details</a>
    <a class="dropdown-item" href="/api/user/logout">Logout</a>
  </div>
</nav>
<div
  data-bs-spy="scroll"
  data-bs-target="#nav-example"
  data-bs-smooth-scroll="true"
  tabindex="0"
>
  <div class="all">
    <div class="container-fluid" style="min-height: 60vh">
      <div class="row">
        <!-- <div class="col-sm-3 bg-primary"></div> -->
        <div class="col-sm-6 offset-sm-3">
          <h1 class="text-center">Pay Now</h1>
          <form name="loginform" id="loginform" method="post">
            <div>
              <label>Advance</label>
              <input
                type="text"
                name="advance"
                class="form-control"
                value="Rs 100"
              />
            </div>
            <div>
              <label>Card Number</label>
              <input
                type="text"
                name="cardno"
                class="form-control"
                maxlength="50"
                required
              />
            </div>

            <div>
              <label>CVV</label>
              <input
                type="text"
                name="cvv"
                class="form-control"
                maxlength="25"
                required
              />
            </div>
            <div>
              <label>Expiry</label>
              <input
                type="text"
                name="expiry"
                class="form-control"
                placeholder="MM/YY"
                maxlength="25"
                required
              />
            </div>

            <div class="sub">
              <input
                type="submit"
                class="btn"
                id="btn-login"
                style="
                  color: white;
                  background-color: black;
                  padding: 10px;
                  border-radius: 20px;
                "
                value="Pay"
              />
            </div>
            {{#if message}}
            <p class="text-danger">{{message}}</p>
            {{/if}}
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JavaScript Libraries -->
<script
  src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
  crossorigin="anonymous"
></script>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
  crossorigin="anonymous"
></script>

<script>
  var email = document.forms["loginform"]["email"];
  var password = document.forms["loginform"]["password"];
  var btn = document.getElementById("btn-login");

  document.querySelectorAll("#loginform input").forEach((e) => {
    e.addEventListener("keyup", function (event) {
      if (!email.validity.valid || !password.validity.valid) {
        btn.setAttribute("disabled", true);
      } else {
        btn.removeAttribute("disabled");
      }
    });
  });
</script>
